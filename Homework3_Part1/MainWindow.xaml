<Window x:Class="Homework3_Part1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework3_Part1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Label Content="Monthly Payment:" VerticalAlignment="Top" />
        <TextBox Name="txtMonthlyPayment" VerticalAlignment="Top" Margin="0,0,10,0" HorizontalAlignment="Right" Width="200"/>

        <Label Content="Outstanding Balance:" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <TextBox Name="txtOutstandingBalance" VerticalAlignment="Top" Margin="0,30,10,0" HorizontalAlignment="Right" Width="200"/>

        <Button Content="Calculate" VerticalAlignment="Top" Margin="0,60,0,0" Width="100" HorizontalAlignment="Right" Click="OnCalculateClicked"/>

        <Label Content="Interest Amount:" VerticalAlignment="Top" Margin="0,100,0,0"/>
        <Label Name="lblInterestAmount" VerticalAlignment="Top" Margin="0,100,10,0" HorizontalAlignment="Right" Width="200"/>

        <Label Content="Principal Amount:" VerticalAlignment="Top" Margin="0,130,0,0"/>
        <Label Name="lblPrincipalAmount" VerticalAlignment="Top" Margin="0,130,10,0" HorizontalAlignment="Right" Width="200"/>
    </Grid>
</Window>
